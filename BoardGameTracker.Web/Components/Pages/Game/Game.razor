@page "/game/{gameId:int}"
@using BoardGameTracker.Shared.DataTransferObjects
@using BoardGameTracker.Web.Services

@inject GameApiClient GameService;

<PageTitle>Detailansicht - @mGame.Name</PageTitle>

<div class="w-full max-w-2xl rounded-xl bg-white p-6 shadow-lg md:p-8">
	<div class="flex flex-col items-center gap-6 md:flex-row md:items-start">
		<img src="https://placehold.co/192x192/a0aec0/ffffff?text=Game+Image" alt="Placeholder Game Image" class="h-32 w-32 rounded-lg object-cover shadow-md md:w-48 md:h-48">

		<div class="flex-1 text-center md:text-left">
			<h1 class="mb-2 text-3xl font-extrabold text-indigo-700 md:text-4xl" id="game-name">
				Game Name Placeholder
			</h1>

			<p class="mb-4 text-sm text-gray-500">
				Erstellt am:
				<span class="font-medium" id="creation-date">
					23. Mai 2025
				</span>
			</p>
		</div>
	</div>

	<hr class="my-6 border-gray-200">

	<div class="mb-6">
		<h2 class="mb-3 text-xl font-semibold text-gray-800">Beschreibung</h2>
		<p class="leading-relaxed text-gray-700" id="game-description">
			Dies ist eine detaillierte Beschreibung des Spiels. Hier könnten Informationen über das Gameplay, die Geschichte, die Charaktere und andere relevante Details stehen. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
		</p>
	</div>
	<hr class="my-6 border-gray-200">

	<div class="text-center md:text-left">
		<a href="#" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-6 py-3 text-base font-medium text-white shadow-sm transition duration-150 ease-in-out hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
			Zurück zur Liste
		</a>
	</div>
</div>

@code {
	[Parameter]
	public int mGameId { get; set; }

	public GameTransferObject mGame { get; set; }

	protected override async Task OnInitializedAsync()
	{
		mGame = await GameService.GetGameByIdAsync(mGameId);
	}
}